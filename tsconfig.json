{
  "compilerOptions": {
    /* Projects */
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": "./.tsbuildinfo",

    /* Language and Environment */
    "target": "es2016",
    "jsx": "react-jsx",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Modules */
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@lib/*": ["lib/*"]
    },

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": false,

    /* Emit */
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmitOnError": true,

    /* Type Checking */
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,

    /* React Specific */
    "jsxImportSource": "react"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/lib/**/*.ts",
    "src/@/**/*.tsx",
    "src/components/**/*.tsx",
    "../components/ui/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
